{
  "compilerOptions": {
    "jsx": "react",
    "jsxFactory": "h",
    "lib": [
      "es2015",
      "DOM"
    ],
    "target": "es6",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
    "dist"
  ]
}